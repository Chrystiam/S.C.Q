<%= simple_form_for(@queja, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fechainforme %>
    <%= f.input :nombres %>
    <%= f.input :apellidos %>
    <%= f.label :tipo_documento_id %>
    <%= f.collection_select :tipo_documento_id, TipoDocumento.all, :id, :sigla, :prompt => "tipo de documento" %>
    <br><br>
    <%= f.input :identificacion %>
    <%= f.label :programa_id %>
    <%= f.collection_select :programa_id, Programa.all, :id, :descripcion, :prompt => "tipo de programa" %>
    <%= f.input :ficha %>
    <%= f.input :descripcion %>
    <%= f.label :falta_id %>
    <%= f.collection_select :falta_id, Falta.all, :id, :descripcion, :prompt => "tipo de falta" %>
    
    <%= f.input :testigos %>
    <%= f.input :nombresinformante %>
    <%= f.input :apellidosinformante %>
    <%= f.input :direccion %>
    <%= f.input :cargo %>
  </div>
  
  <div class="form-actions">
  	<%= f.submit "Guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', quejas_path, :class => 'btn btn-default' %>
  </div>
<% end %>

