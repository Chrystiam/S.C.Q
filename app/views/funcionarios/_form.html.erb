<%= simple_form_for(@funcionario, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.error_notification %>
  
 <div class="responsive">
    <div class="modal-body">  
      <div class="control-group">
        <div class="row" id ="colors">
          <div class= "span6"> 
            <center><h4></h4></center>
            <hr>
            <%= f.input :nombres,  :required => true %>
            <%= f.input :apellidos,:required => true %>
            <%= f.input :cedula,   :required => true %>
            <%= f.input :email,    :required => true %>
          </div>
          
          <center><h4></h4></center>
          <hr>
          <div class ="span6">
            <div class="row">
              <%= f.input :direccion,:required => true %>
              <%= f.input :telefono, :required => true %>
              <%= f.input :fch_nacimiento, as: :date, start_year: Date.today.year - 50, end_year: Date.today.year - 10, accept_day: true, order: [:day, :month, :year] %>  
              
              <%= f.input :cargo, :required => true %>
            </div>
          </div>
        </div>

        <div class= "span12">
          <div class="form-actions">
            <%= f.submit "Guardar", :class => 'btn btn-primary' %>
            <%= link_to 'Atras', funcionarios_path, :class => 'btn btn-default' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>