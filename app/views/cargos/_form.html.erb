<%= simple_form_for(@cargo, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :descripcion %>
  </div>


  <div class="form-actions">
  	<%= f.submit "Guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', cargos_path, :class => 'btn btn-default' %>
  </div>
<% end %>
